name: Test Concurrent Execution

on:
  push:
    branches:
      - master

jobs:
  testubuntu:
    runs-on: [self-hosted, Linux, X64, ubuntu] # Targets the angular-runner-ubuntu
    steps:
      - name: Echo from Ubuntu Runner
        run: echo "This job is running on the Ubuntu runner"

  testspot:
    runs-on: [self-hosted, Linux, X64, spot-instance] # Targets the spot-runner-ip-10-42-1-160
    steps:
      - name: Echo from Spot Runner
        run: echo "This job is running on the Spot instance runner"
